# ============================================================================
# detach - detach a driver from a usb device.
# 09/05/2007
# ============================================================================

CC	=	gcc
CFLAGS	=	-g -O3 -Wall 
LFLAGS	=	-g

# ============================================================================

detach:	detach.c
	$(CC) $(CFLAGS) -o detach detach.c -lusb

# ============================================================================

all:	detach

clean:
	rm -rf a.out *.o detach core foo bar *~

